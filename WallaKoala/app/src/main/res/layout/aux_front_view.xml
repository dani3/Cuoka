<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/recommended_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="top"
                android:text="@string/product_info_name"
                android:textSize="12dp"
                android:textColor="@color/colorMediumText"/>

            <TextView
                android:id="@+id/recommended_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="top"
                android:text="@string/product_info_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12dp"
                android:textColor="@color/colorMediumText"/>

            <TextView
                android:id="@+id/recommended_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="10dp"
                android:textColor="@color/colorMediumText"
                android:text="@string/product_info_price"
                android:background="@drawable/button_relief_white"/>

        </LinearLayout>

        <com.wallakoala.wallakoala.Views.LikeButtonView
            android:id="@+id/recommended_item_favorite"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</android.support.v7.widget.CardView>