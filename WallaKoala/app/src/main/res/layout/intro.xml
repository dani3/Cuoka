<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IntroUI">

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hombre"
        android:textColor="@color/colorText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:checked="false"
        app:buttonTint="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/blanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blanco"
        android:textColor="@color/colorText"
        android:checked="false"
        app:buttonTint="@color/colorAccent"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:layout_marginTop="24dp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/hm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HyM"
        android:textColor="@color/colorText"
        android:checked="false"
        app:buttonTint="@color/colorAccent"
        android:layout_below="@+id/blanco"
        android:layout_alignLeft="@+id/blanco"
        android:layout_alignStart="@+id/blanco"
        android:layout_marginTop="8dp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/pdh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedro del Hierro"
        android:textColor="@color/colorText"
        android:checked="false"
        app:buttonTint="@color/colorAccent"
        android:layout_below="@+id/hm"
        android:layout_alignLeft="@+id/blanco"
        android:layout_alignStart="@+id/blanco"
        android:layout_marginTop="8dp"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/spf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Springfield"
        android:textColor="@color/colorText"
        android:checked="false"
        app:buttonTint="@color/colorAccent"
        android:layout_below="@+id/pdh"
        android:layout_alignLeft="@+id/blanco"
        android:layout_alignStart="@+id/blanco"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
