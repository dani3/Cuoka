<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_height"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/rounded_footer"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.85"
        android:weightSum="1">

        <TextView
            android:id="@+id/footer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/footer_shop"
            android:textSize="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/footer_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/footer_section"
            android:textSize="12dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/footer_fav_button"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_favorite_border_white"
        android:contentDescription="@string/accesibility_favorite"/>

</LinearLayout>
