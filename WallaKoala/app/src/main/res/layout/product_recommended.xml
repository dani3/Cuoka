<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:weightSum="1">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/recommended_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:adjustViewBounds="true"
                app:riv_corner_radius_bottom_left="4dp"
                app:riv_corner_radius_bottom_right="0dp"
                app:riv_corner_radius_top_left="4dp"
                app:riv_corner_radius_top_right="0dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/recommended_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/product_info_name"
                    android:textSize="12dp"
                    android:textColor="@color/colorMediumText"/>

                <TextView
                    android:id="@+id/recommended_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/product_info_name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:textColor="@color/colorMediumText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/colorMediumText"
                    android:text="@string/product_info_price"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <com.wallakoala.wallakoala.Views.LikeButtonView
                android:id="@+id/recommended_item_favorite"
                android:layout_weight="0.15"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>