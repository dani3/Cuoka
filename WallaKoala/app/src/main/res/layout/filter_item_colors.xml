<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/filter_item_color_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:alpha="0.2"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_clear_black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="42dp"
                android:layout_marginEnd="42dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:text="@string/filter_item_colors"
                android:textSize="12dp"
                android:textColor="@color/colorLightText"
                android:background="@drawable/filter_bottom_border"/>

        </RelativeLayout>

        <!-- Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_yellow"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_blue"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_beige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_beige"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_white"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_grey"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_brown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_brown"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_purple"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_black"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_red"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_pink"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/filter_color_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_color_green"
                    android:textColor="@color/colorMediumText"
                    android:layout_marginBottom="8dp"
                    app:buttonTint="@color/colorAccent"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>